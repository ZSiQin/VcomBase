<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_10radius_bg"
        android:padding="5dp">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/white_5radius_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/btn_1"
            android:background="@drawable/white_5radius_bg"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/btn_2"
            android:background="@drawable/white_5radius_bg"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_1"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/white_5radius_bg"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_1"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/btn_4"
            android:background="@drawable/white_5radius_bg"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_1"
            android:layout_toEndOf="@+id/btn_5"
            android:background="@drawable/white_5radius_bg"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_7"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_4"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/white_5radius_bg"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_4"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/btn_7"
            android:background="@drawable/white_5radius_bg"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_4"
            android:layout_toEndOf="@+id/btn_8"
            android:background="@drawable/white_5radius_bg"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_point"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_7"
            android:layout_marginEnd="10dp"
            android:background="@drawable/white_5radius_bg"
            android:gravity="center"
            android:text="."
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_7"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/btn_point"
            android:background="@drawable/white_5radius_bg"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/btn_backspace"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_7"
            android:layout_toEndOf="@+id/btn_0"
            android:background="@drawable/white_5radius_bg"
            android:padding="10dp"
            android:src="@drawable/backspace" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:src="@drawable/close_ic"
        android:visibility="gone" />
</LinearLayout>